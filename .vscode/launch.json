{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "stlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/f3d.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stlink",
            "preLaunchTask": "build",
            "svdFile": "${workspaceFolder}/STM32F303.svd",
            "postRestartCommands": [
                "monitor reset halt",
                "monitor reset init"
            ],
        },
        {
            "name": "daplink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/f3d.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "preLaunchTask": "build",
            "configFiles": [
                "${workspaceFolder}/openocd/daplink.cfg",
                "${workspaceFolder}/chipset.cfg"
            ],
            "svdFile": "${workspaceFolder}/STM32F303.svd",
            "postRestartCommands": [
                "monitor reset halt",
                "monitor reset init"
            ],
        },
        {
            "name": "jlink",
            "device": "STM32F303VC",
            "interface": "swd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/f3d.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "preLaunchTask": "build",
            "svdFile": "${workspaceFolder}/STM32F303.svd",
            "postRestartCommands": [
                "monitor reset halt",
                "monitor reset init",
                "monitor rtt start"
            ],
            "rttConfig": {
                "enabled": true, // 启用 RTT
                "address": "auto",
                "clearOnRestart": true, // 重启时清除 RTT 缓冲区
                "polling_interval": 100 // 设置 RTT 轮询间隔，单位为毫秒
            },
        }
    ]
}